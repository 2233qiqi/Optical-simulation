#Initialize GPS
/gps/particle e-
/gps/pos/type Point
/gps/pos/centre 0 0 0 um

/gps/ang/type beam1d #一维
/gps/ang/sigma_r 2. deg
/gps/ang/rot1 -1 0 0  #Z轴

# Configure discrete energy spectrum
/gps/ene/type Arb
/gps/ene/diffspec 1
/gps/hist/type arb

/gps/ene/type Mono        
/gps/ene/mono 0.0174 MeV

/gps/number 1
/run/beamOn 10000